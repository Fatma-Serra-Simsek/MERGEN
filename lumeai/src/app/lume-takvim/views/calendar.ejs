<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= year %> Calendar</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <form method="get" action="/">
      <label for="year">Year:</label>
      <input type="number" id="year" name="year" value="<%= year %>" min="1900" max="2100">
      <button type="submit">Go</button>
    </form>
    <h1><%= year %></h1>
    <div class="calendar-grid">
      <% calendar.forEach(function(month, mi) { %>
        <div class="month">
          <div class="month-name"><%= month.name %></div>
          <div class="days-header">
            <span>S</span><span>M</span><span>T</span><span>W</span><span>T</span><span>F</span><span>S</span>
          </div>
          <div class="days">
            <% for(let i=0; i<month.firstDay; i++) { %>
              <span class="empty"></span>
            <% } %>
            <% month.days.forEach(function(day) { %>
              <button class="day" data-date="<%= year %>-<%= mi+1 %>-<%= day %>"><%= day %></button>
            <% }); %>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <div id="modal" class="modal" style="display:none;">
    <div class="modal-content">
      <h2 id="modal-date"></h2>
      <div id="reminder-list">Not yok.</div>
      <form id="reminder-form">
        <input type="text" id="reminder-title" placeholder="Başlık" required>
        <input type="text" id="reminder-desc" placeholder="Açıklama">
        <button type="submit" class="add-btn">Ekle</button>
      </form>
      <button id="close-modal" class="close-btn">Kapat</button>
    </div>
  </div>
  <script src="/main.js"></script>
</body>
</html> 